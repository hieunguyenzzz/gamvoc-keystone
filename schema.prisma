datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id               String  @id @default(cuid())
  name             String  @default("")
  email            String  @unique @default("")
  password         String
  avatar_filesize  Int?
  avatar_extension String?
  avatar_width     Int?
  avatar_height    Int?
  avatar_id        String?
  isAdmin          Boolean @default(false)
  status           String? @default("active")
  posts            Post[]  @relation("Post_author")
}

model Post {
  id             String    @id @default(cuid())
  title          String    @default("")
  slug           String    @unique @default("")
  content        String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  status         String?   @default("draft")
  viewsCount     Int?      @default(0)
  seoTitle       String    @default("")
  seoDescription String    @default("")
  seoKeywords    String    @default("")
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @default(now()) @updatedAt
  publishDate    DateTime?
  author         User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId       String?   @map("author")
  category       Category? @relation("Post_category", fields: [categoryId], references: [id])
  categoryId     String?   @map("category")
  tags           Tag[]     @relation("Post_tags")

  @@index([authorId])
  @@index([categoryId])
}

model Category {
  id              String    @id @default(cuid())
  name            String    @default("")
  slug            String    @unique @default("")
  description     String    @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
  imageAlt        String    @default("")
  status          String?   @default("draft")
  order           Int?      @default(-1)
  seoTitle        String    @default("")
  seoDescription  String    @default("")
  seoKeywords     String    @default("")
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @default(now()) @updatedAt
  posts           Post[]    @relation("Post_category")

  @@index([order])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}